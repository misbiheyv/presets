{
	"compilerOptions": {
		"baseUrl": "./src",
    "target": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"importHelpers": true,
		"lib": ["dom", "esnext"],
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strict": true,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*",
		"index.d.ts"
	]
}